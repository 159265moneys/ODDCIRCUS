/// o_backrm1_ctrl.Step — 画面下端→ rm_circus_mainrm へ（連続遷移）
/// ポイント：edge判定を少し甘く（=6px）、分岐は if / if にして取りこぼしをゼロに
if (!instance_exists(o_player)) exit;

var p = instance_find(o_player, 0);
var edge = 6;

if (Input_Check(Action.MoveDown) && p.y >= (1080 - edge)) {
    // 次rmへ入る位置情報：上から入る＝"top"、Xだけ持ち越し
    global._entry_side = "top";
    global._entry_x = p.x;
    global._entry_y = 0;
    room_goto(rm_circus_mainrm);
}
